@model Category

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <h2 class="text-primary">Delete Category</h2>
        <hr />
        <div class="mb-3">
            <label asp-for="Name">Category Name</label>
            <input asp-for="Name" class="form-control" value=@Model.Name disabled/>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder">Display Order</label>
            <input asp-for="DisplayOrder" class="form-control" value=@Model.DisplayOrder disabled/>
        </div>
        <button type="submit" class="btn btn-warning" style="width:150px">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}